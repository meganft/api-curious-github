<div class="container">
  <div class="index-container">
    <div class="row">
      <div class="col-md-3"> <%= render partial: 'shared/sidenav' %></div>
      <div class="col-md-9 offset-md-3"> <%= render partial: 'shared/userprofilenav' %> </div>
      <div class="col-md-9 offset-md-3 repo-list">
          <div>
            <div class="form-group">
              <span class="searchrepo"><input type="text" class="form-control" placeholder="Search starred repositories...">
              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Language: <b>All Languages</b> <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a href="#">All</a></li>
                  <li><a href="#">GCC Machine Description</a></li>
                </ul>
              </div>
              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Sort: <b>Recently Starred</b> <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a href="#">Recently Starred</a></li>
                  <li><a href="#">Recently Active</a></li>
                  <li><a href="#">Most Stars</a></li>
                </ul>
              </div>
            </span>
            </div>
            </div>
          </form>

        <div>
          <% @starred.each do |starred| %>
          <span class="reponamelist"><%= link_to starred.name, starred.url %></span><br>
          <span class="language font" style="font-size:12px;">
            <% if starred.language == 'Ruby' %>
            <%= image_tag("circle_red.png", size:"12x12") %>
            <%= starred.language %>
            <% else %>
            <%= image_tag("orange-icon.png", size:"12x12") %>
            <%= starred.language %>
            <% end %>
            <hr>
            <% end %>
          </div>
        </div>
</div>
